<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.rangga_1202154227_studycase4.CariGambarActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="Cari Gambar"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan URL Gambar"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/klikCari"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:onClick="CariGambar"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_light"
        android:text="Klik Untuk Mencari Gambar"
        android:textColor="@android:color/background_light"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
</LinearLayout>
